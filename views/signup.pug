extends ./templates/tpl_main.pug
block content
    include layouts/topic-layout.pug
    main.container
        h2.site-block.text-center РЕГИСТРАЦИЯ В СЕРВИСЕ
        .projects.mb-2.pb-2
            .columns    
                .column.col-6.col-md-8.col-sm-9.col-xs-12.p-centered
                    .card
                        .card-header.text-center
                            h4.card-title ВВЕДИТЕ ВАШИ ДАННЫЕ
                            .card-subtitle ДЛЯ РЕГИСТРАЦИИ
                        form.card-body(action="/signup", method="post").col-9.col-xs-12.p-centered
                            input(type="hidden", name="_csrf", value=csrfToken)
                            .form-group
                                label.form-label Ваш логин (емайл):
                                input(type="text", name="login", placeholder="Введите ваш логин").form-input
                            .form-group
                                label.form-label Ваш пароль:
                                input(type="password", name="password", placeholder="Введите ваш пароль").form-input
                                label.form-label Повторите пароль:
                                input(type="password", name="password-check", placeholder="Введите пароль повторно").form-input
                            br
                            .form-group.mb-2
                                button(type="submit").btn.btn-lg.btn-primary.p-centered ЗАРЕГИСТРИРОВАТЬСЯ
                        .card-footer
                            a(href="login").btn.btn-link.btn-sm.text-gray.p-centered АВТОРИЗОВАТЬСЯ