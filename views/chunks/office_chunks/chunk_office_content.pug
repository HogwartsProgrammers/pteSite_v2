h1.text-center ВАША СТАТИСТИКА
.d-flex.mb-2
.form-group.float-left
    label.form-switch.text-bold 
        span Ежедневные
        input#weekSwitch(type="checkbox")
        i.form-icon
each post in posts
    section.mt-2.ml-2.mr-2
        h2.text-center= post.title
        .columns
            each sid in post.stat_id.split(',')
                .column.col-2.mb-2
                    .card
                        .card-header
                            .card-title.h4.text-bold.text-center 
                        .card-body
                            .my_dataviz.dragscroll(style="max-width:100%; overflow:auto", data-sid= sid)
                        