extends ./templates/tpl_main.pug
block content
    include layouts/topic-layout.pug
    main.container
        h2.site-block.text-center ВОССТАНОВЛЕНИЕ ПАРОЛЯ
        .projects.mb-2.pb-2
            .columns    
                .column.col-6.col-md-8.col-sm-9.col-xs-12.p-centered
                    .card
                        .card-header.text-center
                            h4.card-title ВВЕДИТЕ ВАШ Е-МАЙЛ
                            .card-subtitle УКАЗАННЫЙ ПРИ РЕГИСТРАЦИИ
                        form.card-body(action="/recovery", method="post").col-9.col-xs-12.p-centered
                            input(type="hidden", name="_csrf", value=csrfToken)
                            .form-group.pb-2
                                label.form-label Ваш логин (емайл):
                                input(type="text", name="login", placeholder="Ваш е-майл").form-input
                            button(type="submit").btn.btn-lg.btn-primary.p-centered ВОССТАНОВИТЬ
                        .card-footer
                            a(href="login").btn.btn-link.btn-sm.p-centered.text-gray АВТОРИЗОВАТЬСЯ